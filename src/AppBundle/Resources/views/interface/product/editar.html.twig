
{% extends 'base.html.twig' %}

{% block body %}
<div class="content" ng-controller="editarProductController" ng-init="index({{id}})">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
            <h1>Produto</h1>
            <h4>Editar</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-12 col-xs-12">
            <form
            id="formEditar"
            name="formEditar"
            ng-submit="editar()"
            method="put"
            >
            <div class="row">
                <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                    {% include ('AppBundle:interface/product:form.html.twig') %}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                    <button type="submit" class="btn btn-success pull-right"> Salvar</button>
                    <a href="{{ path('product_index') }}" class="btn btn-primary pull-right"> Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/angular/product/product_controller.js') }}"></script>
{% endblock %}